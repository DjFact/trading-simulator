  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "NODE_ENV=local nest start --watch",
    "start:auth": "NODE_ENV=local nest start auth-service --watch",
    "start:billing": "NODE_ENV=local nest start billing-service --watch",
    "start:mail": "NODE_ENV=local nest start mail-service --watch",
    "start:market": "NODE_ENV=local nest start market-worker --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/gateway/test/jest-e2e.json"
  },
  "dependencies": {
